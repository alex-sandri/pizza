{
  "name": "@alex-sandri/pizza",
  "version": "5.1.4",
  "description": "A simple tool to start building a web app as quickly as possible",
  "main": "lib/index.js",
  "bin": {
    "pizza": "bin/pizza"
  },
  "scripts": {
    "start": "nodemon -e ts --watch src/ --exec npm run build",
    "build": "tsc --build src",
    "preversion": "npm run lint",
    "postversion": "git push origin master --follow-tags && npm publish",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [],
  "author": "Alex Sandri",
  "license": "MIT",
  "files": [
    "bin/*",
    "lib/**/*",
    "template/**/*",
    "!template/node_modules/**/*"
  ],
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.23",
    "@types/semver": "^7.3.1",
    "@types/validate-npm-package-name": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.5.0",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "lodash": "^4.17.19",
    "semver": "^7.3.2",
    "validate-npm-package-name": "^3.0.0"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-sandri/pizza.git"
  },
  "bugs": {
    "url": "https://github.com/alex-sandri/pizza/issues"
  },
  "homepage": "https://github.com/alex-sandri/pizza#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": ">=10"
  }
}
